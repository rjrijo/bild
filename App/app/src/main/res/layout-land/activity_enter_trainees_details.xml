<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btnEnter_trainees_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_logut_bg"
        android:text="@string/btn_enter_trainees_details"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEnter_trainees_details"
        android:id="@+id/linearLayout4">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEnter_trainees_details"
            android:layout_above="@+id/fragment_place">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_general_details"
                    android:id="@+id/btnGeneral_details"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="click" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_training_details"
                    android:id="@+id/btnTraining_details"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="click" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_assessment_info_1"
                    android:id="@+id/btnAssessment_info_1"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="click" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_assessment_info_2"
                    android:id="@+id/btnAssessment_info_2"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_official_details"
                    android:id="@+id/btnOfficial_details"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="click" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_additional_information"
                    android:id="@+id/btnAdditional_information"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="click" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_testimony"
                    android:id="@+id/btnTestimony"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:onClick="click" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/btn_login_bg"
                    android:textColor="@color/btn_login"
                    android:text="@string/btn_family_details"
                    android:id="@+id/btnFamily_details"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_logut_bg"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="back" />

    <fragment
        android:name="com.rijofaith.EnterTraineeDetails.EnterGeneralDetails"
        android:id="@+id/fragment_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogout"
        android:layout_below="@+id/linearLayout4" />


</RelativeLayout>
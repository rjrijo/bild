<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rijofaith.app" >

    <uses-sdk android:minSdkVersion="11"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.rijofaith.App.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cohorts"
            android:label="@string/title_activity_cohorts"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.MainActivity" />
        </activity>
        <activity
            android:name=".Trainees"
            android:label="@string/title_activity_trainees"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.MainActivity" />
        </activity>
        <activity
            android:name=".DataEntryStatus"
            android:label="@string/title_activity_data_entry_status"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.MainActivity" />
        </activity>
        <activity
            android:name=".TrainingStatus"
            android:label="@string/title_activity_training_status"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.MainActivity" />
        </activity>
        <activity
            android:name=".EnterTraineesDetails"
            android:label="@string/title_activity_enter_edit_trainees_details"
            android:parentActivityName=".Trainees"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.Trainees" />
        </activity>
        <activity
            android:name=".TraineesList"
            android:label="@string/title_activity_trainees_list"
            android:parentActivityName=".Trainees"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.Trainees" />
        </activity>
        <activity
            android:name=".EnterGeneralDetails"
            android:label="@string/title_activity_general_details"
            android:parentActivityName=".EnterTraineesDetails"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.EnterTraineesDetails" />
        </activity>
        <activity
            android:name=".EnterTrainingDetails"
            android:label="@string/title_activity_training_details"
            android:parentActivityName=".EnterTraineesDetails"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rijofaith.app.EnterTraineesDetails" />
        </activity>
    </application>

</manifest>
